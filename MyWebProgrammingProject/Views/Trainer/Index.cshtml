@model IEnumerable<MyWebProgrammingProject.Models.Trainer>

@{
    ViewData["Title"] = "Eğitmen Kadrosu";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="display-5 fw-bold text-white">EĞİTMEN <span style="color: #d63384;">KADROSU</span></h1>
            <p class="text-muted">Alanında uzman profesyonellerle çalışın.</p>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-lg btn-success">
                <i class="fas fa-plus"></i> Yeni Eğitmen Ekle
            </a>
        }
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 bg-dark text-white border-secondary shadow-lg card-hover">
                    <div class="position-relative overflow-hidden" style="height: 300px;">
                        <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://cdn-icons-png.flaticon.com/512/8847/8847419.png" : item.ImageUrl)"
                             class="card-img-top h-100 w-100 object-fit-cover"
                             alt="@item.FullName">

                        <div class="card-img-overlay d-flex flex-column justify-content-end p-0">
                            <div class="bg-gradient-dark p-3" style="background: linear-gradient(to top, rgba(0,0,0,0.9), transparent);">
                                <h3 class="card-title fw-bold mb-0">@item.FullName</h3>
                                <p class="text-primary-custom mb-0">@item.Expertise</p>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted d-block mb-2">VERDİĞİ DERSLER:</small>
                            @if (item.Services != null && item.Services.Any())
                            {
                                @foreach (var service in item.Services)
                                {
                                    <span class="badge bg-secondary me-1 mb-1">@service.Name</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted small">Belirtilmemiş</span>
                            }
                        </div>
                        <p class="card-text text-muted small">
                            <i class="fas fa-map-marker-alt me-1"></i> @item.Gym?.Name
                        </p>
                    </div>

                    <div class="card-footer bg-transparent border-top border-secondary p-3">
                        <div class="d-grid gap-2">
                            @if (User.IsInRole("Member"))
                            {
                                <a asp-controller="Appointment" asp-action="Create" asp-route-trainerId="@item.Id" class="btn btn-outline-custom">
                                    <i class="fas fa-calendar-check me-2"></i>Randevu Al
                                </a>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Düzenle</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Sil</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* Hover Efekti */
    .card-hover {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(214, 51, 132, 0.2);
            border-color: #d63384 !important;
        }

    .object-fit-cover {
        object-fit: cover;
    }
</style>