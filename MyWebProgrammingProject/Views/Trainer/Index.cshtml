@model IEnumerable<MyWebProgrammingProject.Models.Trainer>

@{
    ViewData["Title"] = "Eğitmenler";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Eğitmenler</h2>
    <a class="btn btn-primary" asp-action="Create">Yeni Eğitmen</a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Henüz eğitmen yok.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Ad Soyad</th>
                    <th>Uzmanlık</th>
                    <th>Salon</th>
                    <th>Hizmetler</th>
                    <th class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@t.FullName</td>
                        <td>@t.Expertise</td>
                        <td>@t.Gym?.Name</td>
                        <td>
                            @if (t.Services != null && t.Services.Any())
                            {
                                foreach (var s in t.Services.OrderBy(x => x.Name))
                                {
                                    <span class="badge bg-secondary me-1">@s.Name</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@t.Id">Detay</a>
                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@t.Id">Düzenle</a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@t.Id">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
