@model MyWebProgrammingProject.Models.Trainer

@{
    ViewData["Title"] = "Yeni Eğitmen Ekle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-dark text-white border-secondary shadow-lg">

                <div class="card-header border-secondary bg-transparent py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-user-plus me-2 text-warning"></i>Yeni Eğitmen Tanımla
                    </h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="FullName" class="form-label text-muted">Ad Soyad</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-secondary text-white border-secondary"><i class="fas fa-user"></i></span>
                                    <input asp-for="FullName" class="form-control bg-dark text-white border-secondary" placeholder="Örn: Ahmet Yılmaz" />
                                </div>
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Expertise" class="form-label text-muted">Uzmanlık</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-secondary text-white border-secondary"><i class="fas fa-certificate"></i></span>
                                    <input asp-for="Expertise" class="form-control bg-dark text-white border-secondary" placeholder="Örn: Fitness, Pilates" />
                                </div>
                                <span asp-validation-for="Expertise" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="GymId" class="form-label text-muted">Çalıştığı Salon</label>
                            @if (ViewBag.Gyms != null)
                            {
                                <select asp-for="GymId" class="form-select bg-dark text-white border-secondary" asp-items="@(new SelectList(ViewBag.Gyms, "Id", "Name"))">
                                    <option value="">Bir salon seçiniz...</option>
                                </select>
                            }
                            else
                            {
                                <div class="alert alert-warning">Önce Salon (Gym) eklemelisiniz.</div>
                            }
                            <span asp-validation-for="GymId" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label text-muted d-block mb-2">Verebileceği Dersler</label>
                            <div class="card bg-dark border-secondary p-3">
                                <div class="d-flex flex-wrap gap-2">
                                    @if (ViewBag.Services != null)
                                    {
                                        var services = (List<MyWebProgrammingProject.Models.Service>)ViewBag.Services;
                                        if (services.Any())
                                        {
                                            foreach (var service in services)
                                            {
                                                <input type="checkbox" class="btn-check" name="selectedServiceIds" value="@service.Id" id="service_@service.Id" autocomplete="off">
                                                <label class="btn btn-outline-light btn-sm" for="service_@service.Id">
                                                    @service.Name
                                                </label>
                                            }
                                        }
                                        else
                                        {
                                            <div class="alert alert-warning w-100 mb-0">
                                                <i class="fas fa-exclamation-triangle me-2"></i>Kayıtlı hizmet yok.
                                                <a asp-controller="Service" asp-action="Create" class="alert-link">Hemen Ekle</a>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-lg fw-bold">
                                <i class="fas fa-save me-2"></i> EĞİTMENİ KAYDET
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i> İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>