@model MyWebProgrammingProject.Models.Trainer
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Yeni Eğitmen";
    var gyms = ViewBag.Gyms as IEnumerable<MyWebProgrammingProject.Models.Gym>;
    var services = ViewBag.Services as IEnumerable<MyWebProgrammingProject.Models.Service>;
}

<h2 class="mb-3">➕ Yeni Eğitmen</h2>

<form asp-action="Create" method="post" class="card shadow-sm p-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="FullName" class="form-label">Ad Soyad</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Expertise" class="form-label">Uzmanlık</label>
        <input asp-for="Expertise" class="form-control" />
        <span asp-validation-for="Expertise" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="GymId" class="form-label">Salon</label>
        <select asp-for="GymId" class="form-select" asp-items="@(new SelectList(gyms, "Id", "Name"))">
            <option value="">-- Salon Seç --</option>
        </select>
        <span asp-validation-for="GymId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Hizmetler</label>
        @if (services == null || !services.Any())
        {
            <div class="alert alert-info mb-0">Önce hizmet eklemelisin (Hizmetler menüsü).</div>
        }
        else
        {
            <div class="row">
                @foreach (var s in services)
                {
                    <div class="col-md-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="selectedServiceIds" value="@s.Id" />
                            <label class="form-check-label">@s.Name</label>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-primary" type="submit">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
