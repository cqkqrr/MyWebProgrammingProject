@model MyWebProgrammingProject.Models.Trainer

@{
    ViewData["Title"] = "Eğitmen Detay";
}

<h2 class="mb-3">🔎 Eğitmen Detay</h2>

<div class="card shadow-sm p-3">
    <dl class="row mb-0">
        <dt class="col-sm-3">Ad Soyad</dt>
        <dd class="col-sm-9">@Model.FullName</dd>

        <dt class="col-sm-3">Uzmanlık</dt>
        <dd class="col-sm-9">@Model.Expertise</dd>

        <dt class="col-sm-3">Salon</dt>
        <dd class="col-sm-9">@Model.Gym?.Name</dd>

        <dt class="col-sm-3">Hizmetler</dt>
        <dd class="col-sm-9">
            @if (Model.Services != null && Model.Services.Any())
            {
                foreach (var s in Model.Services.OrderBy(x => x.Name))
                {
                    <span class="badge bg-secondary me-1">@s.Name</span>
                }
            }
            else
            {
                <span class="text-muted">-</span>
            }
        </dd>
    </dl>

    <div class="mt-3 d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
        <a asp-action="Index" class="btn btn-secondary">Geri</a>
    </div>
</div>
