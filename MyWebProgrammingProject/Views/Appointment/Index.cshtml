@model IEnumerable<MyWebProgrammingProject.Models.Appointment>

@{
    ViewData["Title"] = User.IsInRole("Admin") ? "Randevular" : "Randevularım";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">@(User.IsInRole("Admin") ? "Randevular" : "Randevularım")</h2>

    @if (User.IsInRole("Member"))
    {
        <a asp-action="Create" class="btn btn-primary">Yeni Randevu</a>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">Henüz randevu yok.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    @if (User.IsInRole("Admin"))
                    {
                        <th>Üye</th>
                    }
                    <th>Eğitmen</th>
                    <th>Hizmet</th>
                    <th>Başlangıç</th>
                    <th>Bitiş</th>
                    <th>Durum</th>
                    <th>Mesaj</th>
                    @if (User.IsInRole("Admin"))
                    {
                        <th class="text-end">İşlem</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        @if (User.IsInRole("Admin"))
                        {
                            <td>@(a.User?.Email ?? a.UserId)</td>
                        }
                        <td>@a.Trainer?.FullName</td>
                        <td>@a.Service?.Name</td>
                        <td>@a.StartTime.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@a.EndTime.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>
                            @if (a.IsApproved)
                            {
                                <span class="badge bg-success">Onaylandı</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Bekliyor</span>
                            }
                        </td>
                        <td>@(string.IsNullOrWhiteSpace(a.AdminMessage) ? "-" : a.AdminMessage)</td>

                        @if (User.IsInRole("Admin"))
                        {
                            <td class="text-end">
                                @if (!a.IsApproved)
                                {
                                    <a class="btn btn-sm btn-outline-success" asp-action="Approve" asp-route-id="@a.Id">Onayla</a>
                                    <a class="btn btn-sm btn-outline-danger" asp-action="Reject" asp-route-id="@a.Id">Reddet</a>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
