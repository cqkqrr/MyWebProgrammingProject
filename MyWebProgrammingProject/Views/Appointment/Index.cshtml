@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">Spor Salonu Yönetim Sistemi</h1>
        <p class="text-muted">Randevu al, antrenörlerle çalış, sana özel öneriler al</p>
    </div>

    <div class="row g-4">

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Randevu Al</h5>
                    <p class="card-text">Uygun eğitmenlerle hemen randevu oluştur.</p>
                    <a asp-controller="Appointment" asp-action="Create" class="btn btn-primary">
                        Randevu Al
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Randevularım</h5>
                    <p class="card-text">Geçmiş ve aktif randevularını görüntüle.</p>
                    <a asp-controller="Appointment" asp-action="Index" class="btn btn-outline-primary">
                        Görüntüle
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">AI Egzersiz Önerisi</h5>
                    <p class="card-text">Hedeflerine göre yapay zekâdan öneri al.</p>
                    <a href="#" class="btn btn-success">
                        Öneri Al
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>
