@model MyWebProgrammingProject.Models.Appointment
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Randevu Al";
}

<h2>Randevu Al</h2>
<hr />

<form asp-action="Create" method="post">

    <!-- GENEL HATA MESAJLARI -->
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <!-- EĞİTMEN -->
    <div class="mb-3">
        <label asp-for="TrainerId" class="form-label">Eğitmen</label>
        <select asp-for="TrainerId"
                class="form-select"
                asp-items="@(new SelectList(ViewBag.Trainers, "Id", "FullName"))">
            <option value="">-- Eğitmen Seç --</option>
        </select>
    </div>

    <!-- HİZMET -->
    <div class="mb-3">
        <label asp-for="ServiceId" class="form-label">Hizmet</label>
        <select asp-for="ServiceId"
                class="form-select"
                asp-items="@(new SelectList(ViewBag.Services, "Id", "Name"))">
            <option value="">-- Hizmet Seç --</option>
        </select>
    </div>

    <!-- BAŞLANGIÇ SAATİ -->
    <div class="mb-3">
        <label asp-for="StartTime" class="form-label">Başlangıç Saati</label>
        <input asp-for="StartTime"
               class="form-control"
               type="datetime-local" />
    </div>

    <!-- BİTİŞ SAATİ -->
    <div class="mb-3">
        <label asp-for="EndTime" class="form-label">Bitiş Saati</label>
        <input asp-for="EndTime"
               class="form-control"
               type="datetime-local" />
    </div>

    <button type="submit" class="btn btn-primary">Randevu Al</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
