@model MyWebProgrammingProject.Models.Gym

@{
    ViewData["Title"] = "Salon Tanımla";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6 border p-4 shadow-sm bg-light">
            <h4>Salon Tanımla</h4>
            <hr />
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Salon Adı</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label">Adres</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="WorkingHours" class="form-label">Çalışma Saatleri</label>
                    <input asp-for="WorkingHours" class="form-control" />
                    <span asp-validation-for="WorkingHours" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success w-100">Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary w-100 mt-2">Listeye Dön</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}