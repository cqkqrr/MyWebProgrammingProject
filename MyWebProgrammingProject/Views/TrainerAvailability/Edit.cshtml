@model MyWebProgrammingProject.Models.TrainerAvailabilityFormViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Müsaitlik Düzenle";
}

<h2 class="mb-3">✏️ Müsaitlik Düzenle</h2>

<form asp-action="Edit" method="post" class="card shadow-sm p-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Availability.Id" />

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="Availability.TrainerId" class="form-label"></label>
        <select asp-for="Availability.TrainerId" class="form-select" asp-items="@(new SelectList(Model.Trainers, "Id", "FullName"))">
            <option value="">-- Eğitmen Seç --</option>
        </select>
        <span asp-validation-for="Availability.TrainerId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Availability.StartTime" class="form-label"></label>
        <input asp-for="Availability.StartTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="Availability.StartTime" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Availability.EndTime" class="form-label"></label>
        <input asp-for="Availability.EndTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="Availability.EndTime" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-primary" type="submit">Güncelle</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
