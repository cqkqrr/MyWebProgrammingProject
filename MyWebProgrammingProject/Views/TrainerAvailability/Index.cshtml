@model IEnumerable<MyWebProgrammingProject.Models.TrainerAvailability>

@{
    ViewData["Title"] = "Eğitmen Müsaitlikleri";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">🗓️ Eğitmen Müsaitlikleri</h2>
    <a asp-action="Create" class="btn btn-primary">➕ Yeni Müsaitlik</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">Henüz müsaitlik kaydı yok.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Eğitmen</th>
                    <th>Başlangıç</th>
                    <th>Bitiş</th>
                    <th>Tarih</th>
                    <th class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <td>@a.Trainer.FullName</td>
                        <td>@a.StartTime.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@a.EndTime.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@a.Date.ToString("dd.MM.yyyy")</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@a.Id">Detay</a>
                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@a.Id">Düzenle</a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@a.Id">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
