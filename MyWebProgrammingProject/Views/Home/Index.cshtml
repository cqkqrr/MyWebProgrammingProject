@using MyWebProgrammingProject.Models.ViewModels
@model dynamic
@{
    ViewData["Title"] = "Ana Sayfa";
}

@if (User.Identity != null && User.Identity.IsAuthenticated && Model is MemberDashboardViewModel dashboard)
{
    <div class="container mt-5 pt-4">
        <div class="row mb-4">
            <div class="col-md-12">
                <h1 class="display-5 fw-bold text-white">
                    HOŞ GELDİN, <span style="color: #d63384;">@dashboard.FullName.ToUpper()</span> 💪
                </h1>
                <p class="text-muted">Bugün kendini aşmaya hazır mısın?</p>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-dark text-white border-secondary mb-3">
                    <div class="card-body text-center">
                        <h6 class="text-muted"><i class="fas fa-weight me-2"></i>KİLO</h6>
                        <h3 class="fw-bold">@(dashboard.Weight.HasValue? dashboard.Weight + " kg" : "-")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-dark text-white border-secondary mb-3">
                    <div class="card-body text-center">
                        <h6 class="text-muted"><i class="fas fa-ruler-vertical me-2"></i>BOY</h6>
                        <h3 class="fw-bold">@(dashboard.Height.HasValue? dashboard.Height + " cm" : "-")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-dark text-white border-secondary mb-3">
                    <div class="card-body text-center">
                        <h6 class="text-muted"><i class="fas fa-dumbbell me-2"></i>ANTRENMANLAR</h6>
                        <h3 class="fw-bold text-success">@dashboard.TotalWorkouts</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-dark text-white border-secondary mb-3">
                    <div class="card-body text-center">
                        <h6 class="text-muted"><i class="fas fa-bullseye me-2"></i>HEDEF</h6>
                        <h4 class="fw-bold text-warning" style="font-size: 1.1rem;">@dashboard.Goal</h4>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6 mb-4">
                <div class="card bg-dark text-white border-secondary h-100">
                    <div class="card-header border-secondary bg-transparent d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">📅 SIRADAKİ RANDEVU</h5>
                        @if (dashboard.NextAppointment != null)
                        {
                            <span class="badge bg-primary">Onaylı</span>
                        }
                    </div>
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        @if (dashboard.NextAppointment != null)
                        {
                            <h2 class="display-6 fw-bold mb-3">@dashboard.NextAppointment.StartTime.ToString("dd MMMM HH:mm")</h2>
                            <p class="lead mb-1">
                                <i class="fas fa-user-ninja me-2 text-warning"></i>
                                @dashboard.NextAppointment.Trainer?.FullName
                            </p>
                            <p class="text-muted">
                                <i class="fas fa-bolt me-2"></i>
                                @dashboard.NextAppointment.Service?.Name
                            </p>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                                <p class="text-muted">Yaklaşan bir randevun yok.</p>
                                <a asp-controller="Appointment" asp-action="Create" class="btn btn-outline-light mt-2">Hemen Randevu Al</a>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-4">
                <div class="card bg-dark text-white border-secondary h-100">
                    <div class="card-header border-secondary bg-transparent">
                        <h5 class="mb-0">⚡ HIZLI İŞLEMLER</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-3">
                            <a asp-controller="Appointment" asp-action="Create" class="btn btn-lg btn-danger text-start">
                                <i class="fas fa-plus-circle me-3"></i> Yeni Randevu Oluştur
                            </a>
                            <a asp-controller="AiCoach" asp-action="Index" class="btn btn-lg btn-info text-white text-start">
                                <i class="fas fa-robot me-3"></i> AI Koç'tan Tavsiye Al
                            </a>
                            <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-lg btn-outline-secondary text-start">
                                <i class="fas fa-user-edit me-3"></i> Profilimi Düzenle (Boy/Kilo)
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <section class="hero-section d-flex align-items-center text-center text-white">
        <div class="container">
            <h1 class="display-1 fw-bold mb-4 animate-fade-in">IRON<span class="text-primary-custom">PULSE</span></h1>
            <p class="lead mb-5 animate-slide-up">
                Sıradan olma. Sınırlarını zorla. Profesyonel antrenörler ve yapay zeka destekli programlar ile değişimi başlat.
            </p>
            <div class="d-flex justify-content-center gap-3 animate-slide-up delay-1">
                <a class="btn btn-custom btn-lg px-5 py-3" asp-area="Identity" asp-page="/Account/Register">HEMEN BAŞLA</a>
                <a class="btn btn-outline-light btn-lg px-5 py-3" asp-area="Identity" asp-page="/Account/Login">GİRİŞ YAP</a>
            </div>
        </div>
    </section>

    <section class="py-5 bg-darker">
        <div class="container">
            <div class="row text-center text-white">
                <div class="col-md-4 mb-4">
                    <i class="fas fa-dumbbell fa-3x text-primary-custom mb-3"></i>
                    <h4>Modern Ekipmanlar</h4>
                    <p class="text-muted">En son teknoloji fitness ekipmanları ile çalışın.</p>
                </div>
                <div class="col-md-4 mb-4">
                    <i class="fas fa-user-friends fa-3x text-primary-custom mb-3"></i>
                    <h4>Uzman Kadro</h4>
                    <p class="text-muted">Alanında uzman antrenörlerden birebir destek alın.</p>
                </div>
                <div class="col-md-4 mb-4">
                    <i class="fas fa-brain fa-3x text-primary-custom mb-3"></i>
                    <h4>AI Destekli Program</h4>
                    <p class="text-muted">Yapay zeka ile kişisel gelişiminizi analiz edin.</p>
                </div>
            </div>
        </div>
    </section>
}

<style>
    /* Sadece bu sayfaya özel ufak stiller */
    .bg-darker {
        background-color: #000;
    }

    .hero-section {
        height: 100vh;
        background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.8)), url('https://images.unsplash.com/photo-1534438327276-14e5300c3a48?auto=format&fit=crop&q=80');
        background-size: cover;
        background-position: center;
        margin-top: -80px; /* Navbar payı */
    }
</style>