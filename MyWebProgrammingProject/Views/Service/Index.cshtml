@model IEnumerable<MyWebProgrammingProject.Models.Service>

@{
    ViewData["Title"] = "Hizmetler";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">🧾 Hizmetler</h2>
    <a class="btn btn-primary" asp-action="Create">➕ Yeni Hizmet</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">Henüz hizmet yok.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Hizmet</th>
                    <th>Süre (dk)</th>
                    <th>Fiyat</th>
                    <th>Salon</th>
                    <th class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@s.Name</td>
                        <td>@s.Duration</td>
                        <td>@s.Price.ToString("0.00")</td>
                        <td>@s.Gym?.Name</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@s.Id">Detay</a>
                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@s.Id">Düzenle</a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@s.Id">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
