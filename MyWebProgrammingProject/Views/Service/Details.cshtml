@model MyWebProgrammingProject.Models.Service

@{
    ViewData["Title"] = "Hizmet Detay";
}

<h2 class="mb-3">Hizmet Detay</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Hizmet</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Süre</dt>
            <dd class="col-sm-9">@Model.Duration dk</dd>

            <dt class="col-sm-3">Fiyat</dt>
            <dd class="col-sm-9">@Model.Price.ToString("0.00")</dd>

            <dt class="col-sm-3">Salon</dt>
            <dd class="col-sm-9">@Model.Gym?.Name</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id">Düzenle</a>
    <a class="btn btn-secondary" asp-action="Index">Geri</a>
</div>
